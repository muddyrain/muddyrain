{
  "name": "muddyrain",
  "version": "1.4.2",
  "description": "A react library developed with dumi",
  "license": "MIT",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "father build",
    "build:watch": "father dev",
    "dev": "dumi dev",
    "docs:build": "dumi build",
    "doctor": "father doctor",
    "lint": "npm run lint:es && npm run lint:css",
    "lint:css": "stylelint \"src/**/*.+(css|less|scss)\"",
    "lint:es": "eslint \"src/**/*.+(js|ts|jsx|tsx)\"",
    "prepare": "husky install && dumi setup",
    "prepublishOnly": "father doctor && npm run build",
    "format": "npx prettier --write \"src/**/*.+(js|ts|jsx|tsx)\"",
    "start": "npm run dev",
    "release": "release-it",
    "deploy": "gh-pages -d dist"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "homepage": "https://muddyrain.github.io/muddyrain",
  "repository": {
    "type": "git",
    "url": "https://github.com/muddyrain/muddyrain.git"
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write --no-error-on-unmatched-pattern"
    ],
    "*.{css,less}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@ant-design/icons": "^5.1.4",
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@release-it/conventional-changelog": "^5.1.1",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@umijs/lint": "^4.0.0",
    "ahooks": "^3.7.7",
    "antd": "^5.5.1",
    "dumi": "^2.1.22",
    "eslint": "^8.23.0",
    "father": "^4.1.0",
    "gh-pages": "^5.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.8.8",
    "prettier-plugin-organize-imports": "^3.0.0",
    "prettier-plugin-packagejson": "^2.2.18",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "release-it": "^15.10.3",
    "stylelint": "^14.9.1",
    "zustand": "^4.3.8"
  },
  "peerDependencies": {
    "ahooks": ">=3.0.0",
    "antd": ">=4.0.0",
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "authors": [
    "qiu3291002845@gmail.com"
  ],
  "dependencies": {
    "@tippyjs/react": "^4.2.6",
    "cz-customizable": "^7.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "gsap": "^3.12.2",
    "tailwindcss": "^3.3.2",
    "tippy.js": "^6.3.7"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./.cz-config.cjs"
    }
  }
}
